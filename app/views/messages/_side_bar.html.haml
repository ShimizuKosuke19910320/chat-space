.side-bar
 .user-name
  .user-name__top-items
   %p.user-name__top-items__user-name
    = current_user.name
   %ul.user-name__top-items__menu
    %li.user-name__top-items__menu__new-group
     =link_to new_group_path do
      %i.fa.fa-edit
    %li.user-name__top-items__menu__edit-user
     =link_to edit_user_path(current_user) do
      =icon('fas', 'cog', class: 'icon')
 .groups
  -current_user.groups.each do |group|
   .group
   = link_to group_messages_path(group) do
    .group__name
     = group.name
    .group__message
     = group.show_last_message
